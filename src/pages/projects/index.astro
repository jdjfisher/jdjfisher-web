---
import RootLayout from '../../layouts/RootLayout.astro';
import ProjectOverview from '../../components/projects/ProjectOverview.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects', ({ data }) => !data.draft);
---

<RootLayout>
  <div>
    <h1 class="mb-5">Projects</h1>

    <p class="mb-18">
      Here are some of the projects I've worked on. Click on a project to learn more about it.
    </p>

    <div class="space-y-16">
      {projects.map((project) => <ProjectOverview project={project.data} />)}
    </div>
  </div>
</RootLayout>
