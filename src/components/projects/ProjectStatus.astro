---
import type { Project } from '../../types';
import Tag from '../Tag.astro';

interface Props {
  project: Project;
}

const statusColours: Record<Project['status'], string> = {
  active: '#99b88c',
  closed: '#ddd',
  paused: '#aaa',
  prototyping: '#bbb',
} as const;

const { project } = Astro.props;

const colour = statusColours[project.status];
---

<Tag colour={colour} text={project.status} />
