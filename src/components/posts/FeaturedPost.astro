---
import type { Post } from '../../types';
import dayjs from 'dayjs';
import RowLink from '../layout/RowLink.astro';

interface Props {
  post: Post;
}

const { post } = Astro.props;
---

<RowLink href={`/posts/${post.slug}`}>
  <span class="text-sm text-gray-500">{dayjs(post.postedAt).format('MMMM Do, YYYY')}</span>
  <h2 class="text-lg" transition:name={`post-${post.title}`}>{post.title}</h2>
  <p class="text-gray-500">{post.description}</p>
</RowLink>
