---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<div class="group relative">
  <div
    class="w-[0.2rem] absolute h-full opacity-0 -translate-x-4 scale-y-50 bg-orange-500 transition group-hover:-translate-x-8 group-hover:scale-100 group-hover:opacity-100"
  >
  </div>

  <a href={href}><slot /></a>
</div>
